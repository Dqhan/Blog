    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "attach Program",
            "port": 9222,
            "protocol": "inspector",
            "cwd": "${workspaceRoot}/server/server.js", // 需要调试的目录的绝对路
            "restart": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "launch Server",
            "program": "${workspaceFolder}/server\\server.js",
            "cwd": "${workspaceFolder}/server"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "launch user",
            "program": "${workspaceFolder}/server/api\\user.js",
            "cwd": "${workspaceFolder}/server"
        }
    ]
}